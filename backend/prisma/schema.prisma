generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bet {
  id             Int     @id @default(autoincrement())
  title          String
  description    String
  options        Json     // ✅ Esto te permitirá guardar ["Yes", "No"]
  creatorAddress String
  status         String
  createdAt      DateTime @default(now())
}

model ProposedBet {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  options        Json
  creatorAddress String
  createdAt      DateTime @default(now())
  status         String   @default("pending")
}