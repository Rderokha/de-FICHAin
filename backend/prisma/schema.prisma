generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bet {
  id             String   @id @default(cuid())
  title          String
  description    String
  options        String   // JSON.stringify() cuando guardes
  creatorAddress String
  createdAt      DateTime @default(now())
  status         String
}
